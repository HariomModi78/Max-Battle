<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/leadboard.css">
    <link rel="stylesheet" href="/stylesheets/boiler.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#007bff">
</head>
<body>
     
    <main>
        <div class="header">
            <div class="logo">
                <img src="/images/icon.png" alt="">
            </div>
            <a href="https://freefirebattel.netlify.app/" class="support" >
                <img loading="lazy"  src="/images/support.webp" alt="">
            </a>
            <div class="greet">
                <p>Wellcome Back,</p>
                <p class="big">Max Battle</p>
            </div>
            <div class="walletAmount" id="wallet/<%=user._id%>">
                <img class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
                <div class="number"><%=user.totalBalance%></div>
            </div>
        </div>
        <div class="fakeHeader"></div>
        <div id="pageLoader">
            <div class="skeleton-card">
                <div class="skeleton-thumbnail"></div>
                <div class="skeleton-text"></div>
                <div class="skeleton-text short"></div>
            </div>
            <div class="skeleton-card">
                <div class="skeleton-thumbnail"></div>
                <div class="skeleton-text"></div>
                <div class="skeleton-text short"></div>
            </div>
    </div>
        <div class="page">
            <div class="timeOption">
            <div class="month">Monthly</div>
        </div>
        <div class="optionHeading">
            <div class="option">Position</div>            
            <div class="option">Player Name</div>            
            <div class="option">Winning</div>            
        </div>
        <% for(let i=0;i< Math.min(users.length,10);i++){ %>
            <div class="playerDetail">
                <div class="option"><%=i+1%></div>
                <div class="option"><%=users[i].gameName%></div>
                <div class="option"><%=users[i].monthlyWinning%></div>
            </div>
        <% } %>
        </div>
        
        
        
       

        <div class="fakeHeader"></div>
        <div class="fakeFooter"></div>
        <div class="footer"> 
            <div class="footerBox earn" id="earn/<%=user._id%>">
                <img src="https://cdn-icons-png.flaticon.com/128/2958/2958733.png" id="earn/<%=user._id%>" alt="">
                <p id="earn/<%=user._id%>">Earn</p>
            </div>
            <div class="footerBox home" id="home/<%=user._id%>">
                <img src="https://cdn-icons-png.flaticon.com/128/263/263115.png" id="home/<%=user._id%>" alt="">
                <p id="home/<%=user._id%>" >Home</p>
            </div>
            <div class="footerBox center wallet" id="wallet/<%=user._id%>">
                <img src="https://cdn-icons-png.flaticon.com/128/2746/2746064.png" id="wallet/<%=user._id%>" alt="">
                <p id="wallet/<%=user._id%>">Wallet</p>
            </div>
            <div class="footerBox leadboard" id="leadboard/<%=user._id%>">
                <img src="https://cdn-icons-png.flaticon.com/128/819/819590.png" id="leadboard/<%=user._id%>" alt="">
                <p id="leadboard/<%=user._id%>">Leadboard</p>
            </div>
            <div class="footerBox profile" id="profile/<%=user._id%>">
                <img src="https://cdn-icons-png.flaticon.com/128/1144/1144760.png" id="profile/<%=user._id%>" alt="">
                <p id="profile/<%=user._id%>">Profile</p>
            </div>
        </div>

        </div>
    </main>
    <script src="/javaScripts/footer.js"></script>
    <script src="/javaScripts/header.js"></script>
    <script src="/javaScripts/boiler.js"></script>
    <script src="/script.js"></script>

</body>
</html>