<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Max Battle - Join Tournament</title>
  <link rel="stylesheet" href="/stylesheets/boiler.css">
  <link rel="stylesheet" href="/stylesheets/tournamentPayment.css">

  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#007bff">
</head>
<body>
<main>
        <div class="disconnect">
            <img src="/images/disconnect.webp" alt="">
        </div>
  <!-- Loader before page shows -->
  <div id="pageLoader">
    <div class="skeleton-card">
      <div class="skeleton-thumbnail"></div>
      <div class="skeleton-text"></div>
      <div class="skeleton-text short"></div>
    </div>
    <div class="skeleton-card">
      <div class="skeleton-thumbnail"></div>
      <div class="skeleton-text"></div>
      <div class="skeleton-text short"></div>
    </div>
  </div> 

  <!-- Main Page -->
  <div class="page" style="display:none;">
    <div class="part1">
      <div class="amount">
        <img loading="lazy" class="smallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
        <%= user.totalBalance.toLocaleString("en-IN") %>
      </div>
      <div class="options">
        <div class="option1">
          <div class="optionAmount1">
            <img loading="lazy" class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
            <%= user.deposited.toLocaleString("en-IN") %>
          </div>
          <div class="optionName1">Deposited</div>
        </div>
        <div class="option1">
          <div class="optionAmount1">
            <img loading="lazy" class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
            <%= user.winning.toLocaleString("en-IN") %>
          </div>
          <div class="optionName1">Winning</div>
        </div>
        <div class="option1">
          <div class="optionAmount1">
            <img loading="lazy" class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
            <%= user.bonus.toLocaleString("en-IN") %>
          </div>
          <div class="optionName1">Bonus</div>
        </div>
      </div>
    </div>

    <div class="playerDetail">
      <p>Enter Player Details</p>
      <div class="row row1">
        <div class="column">Team</div>
        <div class="column">Position</div>
        <div class="column">Player Name</div>
      </div>
      <div class="row">
        <div class="column">Team 43</div>
        <div class="column">A</div>
        <div class="column edit"><%= user.gameName %></div>
      </div>
    </div>

    <strong>
      Match Entry Fee Per Player: 
      <img loading="lazy" class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
      <%= tournament.entryFee %>
    </strong>
    
    <div class="fee">
      Total payable =
      <img loading="lazy" class="verySmallCoin" src="https://cdn-icons-png.flaticon.com/128/9382/9382295.png" alt="">
      <%= user.totalBalance.toLocaleString("en-IN") %>
    </div>

    <% if (user.totalBalance < tournament.entryFee) { %>
      <div class="red">You don't have sufficient Max coins</div>
    <% } %>

    <div class="footer">
      <div class="button back" id="back">Cancel</div>

      <% if (user.totalBalance >= tournament.entryFee) { %>
        <form  class="buttonForm" action="/roomIdAndPassword/<%= user._id %>/<%= tournament._id %>/<%= slotNumber %>" method="post">
          <input type="submit" value="Join" class="button join allow " id="<%= tournament._id %>">
        </form>
      <% } else { %>
        <div class="button join add" id="<%= user._id %>">Add Money</div>
      <% } %>
    </div>
  </div>

  <div class="fakeFooter"></div>
</main>

<!-- Scripts -->
<script>
  let join = document.querySelector(".join");
  let page = document.querySelector(".page");
  let pageLoader = document.getElementById("pageLoader");

  // Handle click on join button
  join.addEventListener("click", function () {
    page.style.display = "none";
    pageLoader.style.display = "block";

    if (join.classList.contains("allow")) {
      localStorage.setItem("paymentDone", "<%=tournament._id%>");
      console.log("Payment done = ",localStorage.getItem("paymentDone"))
      // Let form handle redirection
    } else {
      window.location.href = `/deposit/${join.id}`;
    }
  });

  // Prevent back button after successful payment
  

  // Page show handler for loader
  window.addEventListener("pageshow", function () {
    if (localStorage.getItem("paymentDone") === "<%=tournament._id%>") {
      window.location.href = "/home/<%=user._id%>";
  }else{
                page.style.display = "block";
                pageLoader.style.display = "none";
            }
  });
</script>

<script src="/javaScripts/back.js"></script>
<script src="/javaScripts/tournamentPayment.js"></script>
<script src="/javaScripts/boiler.js"></script>
<script type="module" src="/script.js"></script>
</body>
</html>
